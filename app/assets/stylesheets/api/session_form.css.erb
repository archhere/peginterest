.login-form-container{
  color:black;
  width: 400px;
  min-height: 533px;
  margin: 0 auto;
  /* border: 5px solid black; */
  margin-top: 150px;
  padding-top: 25px;
}

.login-form-container p{
  font-family: Roboto;
  font-weight: 700;
  font-size: 28px;
  color: rgb(85, 85, 85);
  text-align: center;
}

.login-form-container span{
    font-family: Roboto;
    color: rgb(204, 204, 204);
    font-size: 18px;
    position:relative;
}

.logo{
  height: 40px;
  width: 40px;
  padding-top: 10px;
  position:relative;
  bottom: -20%;
  left: 45%;
}

.login-input {
  display: flex;
  width: 63%;
  margin: 5px auto;
  padding: 10px;
  border: 1px solid grey;
  border-radius: 5px;
  opacity: .5;
  font-size: 15px;
}

.session-submit {
  color: white;
  width: 268px;
  margin-left: 65px;
  padding: 0px 18px;
  font-size: 15px;
  font-weight: 400;
  font-family: Roboto;
  outline: none;
  box-shadow: none;
  cursor: pointer;
  margin-top: 0px;
  background-color: rgb(189, 8, 28);
  border: 0px;
  height: 36px;
  display: inline-block;
  border-radius: 4px;
}

.demo-submit{
  color: black;
  margin-left: 43%;
  font-size: 15px;
  font-family: sans-serif;
  /* outline: none; */
  /* box-shadow: none; */
  cursor: pointer;
  margin-top: 10px;
  background-color: white;
  border: 0px;
  height: 36px;
  /* display: inline-block; */
  border-radius: 4px;
}

.demo-submit:hover{
  background-color: lightgray;
}

.fromtype-button{
  position: relative;
  margin-left: 44.4%;
}

